{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://example.com/employee.schema.json",
  "title": "Record of employee",
  "description": "This document records the details of an employee. Este documento tiene los registros detallados de un empleado",
  "type": "object",
  "nombre": "Marcelino Velazquez Garcia",
  "properties": {
      "id": {
          "description": "A unique identifier for an employee",
          "type": "numero"
      },
      "name": {
          "description": "name of the employee",
          "type": "cadena",
          "minLength":2
      },
      "age": {
          "description": "age of the employee",
          "type": "numero",
          "minimum": 16
      },
      "hobbies": {
          "description": "hobbies of the employee",
          "type": "objeto",
          "properties": {
              "indoor": {
                  "type": "arreglo",
                  "items": {
                      "description": "List of hobbies",
                      "type": "cadcena"
                  },
                  "minItems": 1,
                  "uniqueItems": true
              },
              "outdoor": {
                  "type": "arreglo",
                  "items": {
                      "description": "List of hobbies",
                      "type": "cadcena"
                  },
                  "minItems": 1,
                  "uniqueItems": true
              }
          },
          "required": [
              "indoor",
              "outdoor"
          ]
      }
  },
  "required": [
      "id",
      "name",
      "age",
      "hobbies"
  ],
"additionalProperties": false
}