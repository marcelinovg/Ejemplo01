{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://example.com/employee.schema.json",
  "title": "Record of employee",
  "description": "Este documento tiene los registros detallados de un empleado",
  "type": "object",
  "nombre": "Marcelino Velazquez Garcia",
  "properties": {
      "id": {
          "description": "Un identificador unico por empleado",
          "type": "number"
      },
      "name": {
          "description": "Nombre del empleado",
          "type": "string",
          "minLength":2
      },
      "age": {
          "description": "Edad del empleado",
          "type": "number",
          "minimum": 16
      },
      "hobbies": {
          "description": "hobbies of the employee",
          "type": "object",
          "properties": {
              "indoor": {
                  "type": "array",
                  "items": {
                      "description": "List of hobbies",
                      "type": "string"
                  },
                  "minItems": 1,
                  "uniqueItems": true
              },
              "outdoor": {
                  "type": "array",
                  "items": {
                      "description": "List of hobbies",
                      "type": "string"
                  },
                  "minItems": 1,
                  "uniqueItems": true
              }
          },
          "required": [
              "indoor",
              "outdoor"
          ]
      }
  },
  "required": [
      "id",
      "name",
      "age",
      "hobbies"
  ],
"additionalProperties": false
}